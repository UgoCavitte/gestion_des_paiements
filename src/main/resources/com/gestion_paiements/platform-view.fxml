<AnchorPane minHeight="575.0" minWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="575.0" minWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" VBox.vgrow="ALWAYS">
            <children>
                <HBox maxHeight="-Infinity" minHeight="37.0" minWidth="500.0" prefHeight="37.0" VBox.vgrow="NEVER">
                    <children>
                        <ComboBox fx:id="boxYear" onAction="#selectionChanged" prefWidth="150.0" promptText="Année">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                            </HBox.margin>
                        </ComboBox>
                        <ComboBox fx:id="boxMonth" onAction="#selectionChanged" prefWidth="150.0" promptText="Mois">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                            </HBox.margin>
                        </ComboBox>
                    </children>
                </HBox>
                <Separator />
            <AnchorPane fx:id="paneTable" minHeight="454.0" minWidth="500.0" VBox.vgrow="ALWAYS" />
                <Separator />
            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="37.0" minWidth="500.0">
               <children>
                  <Label text="Total reçu :" />
                  <Label fx:id="labelTotal">
                     <padding>
                        <Insets left="2.0" />
                     </padding>
                  </Label>
                  <Label text="Nombre de paiements :">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                  </Label>
                  <Label fx:id="labelCount">
                     <padding>
                        <Insets left="2.0" />
                     </padding>
                  </Label>
                  <Label layoutX="221.0" layoutY="20.0" text="Moyenne :">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                  </Label>
                  <Label fx:id="labelAverage" layoutX="374.0" layoutY="20.0">
                     <padding>
                        <Insets left="2.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <Separator />
                <HBox alignment="CENTER" minHeight="38.0" minWidth="500.0" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#addNewTransfer" text="Nouveau paiement" textAlignment="CENTER" />
                  <Button fx:id="buttonModify" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#modify" text="Modifier" />
                  <Button fx:id="buttonDelete" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#delete" text="Supprimer" />
                  <Button mnemonicParsing="false" onAction="#transferToBankAccount" text="Transférer sur le compte" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
