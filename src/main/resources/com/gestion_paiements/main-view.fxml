<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestion_paiements.controllers.MainController">
   <children>
      <MenuBar layoutY="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
            <Menu mnemonicParsing="false" text="Données">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#generalSave" text="Tout sauvegarder" />
                  <MenuItem mnemonicParsing="false" onAction="#fermerFenetre" text="Fermer la fenêtre" />
                <MenuItem mnemonicParsing="false" onAction="#rechargerDonnees" text="Charger les données sans sauvegarder" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Paramètres">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openParameters" text="Ouvrir les paramètres" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.5" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
         <items>
            <StackPane fx:id="mainTabPane" />
            <StackPane fx:id="paneClient" />
         </items>
      </SplitPane>
   </children>
</AnchorPane>
